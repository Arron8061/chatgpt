generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Chat {
  id         String    @id @default(uuid())
  title      String
  updateTime DateTime  @updatedAt
  Message    Message[]
}

model Message {
  id         String   @id @default(uuid())
  content    String
  role       String
  createTime DateTime @default(now())
  chatId     String
  chat       Chat     @relation(fields: [chatId], references: [id])

 
}
